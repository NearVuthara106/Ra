import os
import logging
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, MessageHandler, filters, ContextTypes
from google import genai
from google.genai import types

# --- Configuration ---
# Set your tokens/keys as environment variables for security.
# Alternatively, you can replace os.getenv with your actual string, but this is NOT recommended.
TELEGRAM_TOKEN = os.getenv("TELEGRAM_TOKEN", "YOUR_TELEGRAM_BOT_TOKEN") 
GEMINI_API_KEY = os.getenv("GEMINI_API_KEY", "YOUR_GEMINI_API_KEY") 

# Configure logging
logging.basicConfig(
    format='%(asctime)s - %(name)s - %(levelname)s - %(message)s',
    level=logging.INFO
)

# Initialize the Gemini Client
try:
    # The client automatically picks up the API key from the GEMINI_API_KEY environment variable.
    # If not set, you can pass it directly: genai.Client(api_key=GEMINI_API_KEY)
    gemini_client = genai.Client(api_key=GEMINI_API_KEY) 
    # Use the gemini-2.5-flash model, which is great for fast chat.
    GEMINI_MODEL = "gemini-2.5-flash"
except Exception as e:
    logging.error(f"Error initializing Gemini client: {e}")
    exit()

# --- Telegram Bot Handlers ---

# Handler for the /start command
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE) -> None:
    """Sends a welcome message when the /start command is issued."""
    user = update.effective_user
    await update.message.reply_html(
        f"Hi {user.mention_html()}! I'm an AI assistant Join Channel ðŸ’¢ðŸ‘‰ t.me/ThaRa106 . "
        "Ask me anything!",
    )

# Handler for text messages - this is where the Gemini API call happens
async def chat_handler(update: Update, context: ContextTypes.DEFAULT_TYPE) -> None:
    """Handles text messages and sends them to the Gemini API for a response."""
    user_message = update.message.text
    logging.info(f"User message: {user_message}")

    try:
        # Call the Gemini API to generate content
        response = gemini_client.models.generate_content(
            model=GEMINI_MODEL,
            contents=user_message,
        )
        
        # Get the text from the response
        ai_response = response.text
        
        # Send the Gemini response back to the user
        await update.message.reply_text(ai_response)
        
    except Exception as e:
        logging.error(f"Error calling Gemini API: {e}")
        await update.message.reply_text("Sorry, I encountered an error while processing your request.")

# --- Main Bot Function ---

def main():
    """Start the bot."""
    # Create the Application and pass it your bot's token.
    if not TELEGRAM_TOKEN:
        logging.error("Telegram Token not found. Please set the TELEGRAM_TOKEN environment variable.")
        return
        
    application = ApplicationBuilder().token(TELEGRAM_TOKEN).build()

    # Add handlers
    application.add_handler(CommandHandler("start", start))
    
    # Handle all incoming text messages that are not commands
    application.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, chat_handler))

    # Start the Bot
    logging.info("Bot is running...")
    # This runs the bot until the user presses Ctrl-C
    application.run_polling(poll_interval=3.0) 

if __name__ == '__main__':
    main()
